extends layout

include utils.pug

block content
  link(rel='stylesheet' href='/stylesheets/user-login.css')
  div.center
    h1 Login
    +validationErrorSummary(errors)
    form(action='/users/login' method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      div.email
        +field('Email Address', 'email', user.email)
      div.password
        +field('Password', 'password', user.hashedPassword, 'password')
      div.login-button
          button(type='submit') Login
      div.cancel-button
          a(href='/') Cancel
      div.need-an-account
        p: a(href='/users/register') Need an account? Sign Up
      div.back-to-home
        p: a(href='/') Back to Home!
