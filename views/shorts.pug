extends layout.pug

include utils.pug

block content
    link(rel='stylesheet' href='/stylesheets/shorts.css')
    h1#shorts-main-title Shorts!
    div#shorts-list-div
        each short in shorts
            div.short(id=`short-div-${short.id}`)
                h2.short-title= short.title 
                div.short-author
                    +getUsername(short.userId, users)
                div.short-buttons
                    div.view-short-div
                        a.view-short-link(href=`/shorts/${short.id}`) View Short
                    div.delete-short
                        if locals.authenticated
                            if short.userId === userId  
                                button.delete-short-buttons(id=`${short.id}`) Delete
    div#bottom-nav-shorts
        if locals.authenticated
            a#create-short(href='/shorts/create') Create a short!
        a#back-to-home(href='/') Back to Home!


    