extends layout

include utils

block head
    link(rel='stylesheet' href='/stylesheets/edit-short.css')
block content
  h2 Edit Short:
  div#form-div
      +validationErrorSummary(errors)
      form(action=`/shorts/${short.id}/edit` method='POST')
          input(type='hidden' name='_csrf' value=csrfToken)
          div#title-div
            +field('Title', 'title', short.title)
          div#div-content
            +field('Content', 'content', short.content, 'textarea')
          button Submit
          a(href=`/shorts/${short.id}`) Cancel
